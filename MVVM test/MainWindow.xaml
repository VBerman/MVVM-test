<Window x:Class="MVVM_test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:mvvm="clr-namespace:MVVM_test.MVVM"
        xmlns:mvvm1="clr-namespace:MVVM_test.Classes"
        Title="MainWindow" Height="450" Width="800"
        DataContext="{Binding Source={x:Static mvvm1:ViewModel.Instance}}">

      
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <DataGrid AutoGenerateColumns="False" Grid.Row="1" ItemsSource="{Binding Phones, Mode=TwoWay}" CurrentCellChanged="DataGrid_CurrentCellChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Title" Binding="{Binding Title,Mode=TwoWay}"/>
                
            </DataGrid.Columns>
        </DataGrid>
        <TextBlock Text="{Binding Path=Assets[0].AssetName, TargetNullValue='das'}" Grid.Row="0"/>
        <Button Width="125" Height="25" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="2" Command="{Binding SaveChanges, IsAsync=True}"></Button>
    </Grid>
   
</Window>
