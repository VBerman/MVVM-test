<Window x:Class="MVVM_test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <DataGrid ItemsSource="{Binding Assets}" AutoGenerateColumns="False" Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Title" Binding="{Binding AssetName}"/>
                
            </DataGrid.Columns>
        </DataGrid>
        <TextBlock Text="{Binding Path=Assets[0].AssetName, TargetNullValue='das'}" Grid.Row="0"/>
        <Button Width="125" Height="25" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="2" Command="{Binding SaveChanges, IsAsync=True}"></Button>
    </Grid>
   
</Window>
